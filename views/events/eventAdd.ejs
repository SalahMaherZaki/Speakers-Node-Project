<html>

<head>
    <title>Form of Adding Event</title>
    <link href="/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- <link href="css/font-awesome.css" rel="stylesheet" /> -->
</head>

<body>
    <div class="container col-6 offset-3 mt-5">
        <div>
            <p class="h3 alert alert-success">Add Event</p>
        </div>
        <form action="/events/add" method="post">
            <input type="text" name="_id" class="form-control" placeholder="ID" required>
            <input type="text" name="title" class="form-control mt-1" placeholder="Event Title" required>
            <!-- <input type="date" name="date" class="form-control mt-1" placeholder="Event Date" required> -->
            <div class="input-group mt-1">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Main Speaker</label>
                </div>
                <select name="mainSpeaker" class="custom-select" required id="inputGroupSelect01">
                    <% speaker.forEach((element)=>{ %>
                    <option value="<%= element._id %>">
                        <%= element.userName %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group mt-1">
                <label class="h6 alert-secondary rounded p-2">Other Speakers</label>
                <select name="otherSpeakers" class="custom-select mt-1" required multiple>
                    <% speaker.forEach((element)=>{ %>
                    <option value="<%= element._id %>">
                        <%= element.userName %>
                    </option>
                    <% }) %>
                </select>
            </div>

            <input type="submit" value="Add Event" class="mt-1 form-control  btn btn-primary btn-lg">
        </form>
    </div>
    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/bootstrap/dist/js/jquery-3.2.1.min.js"></script>

</body>

</html>